{% extends "forms/form.twig" %}

{% block fields %}
	{{ form.fields["form_id"] }}
    {{ form.fields["form_build_id"] }}
    {{ form.fields["form_token"] }}
	<div class="row ml-1">
		{% if form.exportEntityButtonShow %}
			<div class="col-sm-12">
				<a href="{{ constant("BASE_URL") }}/admin/table/ExportMapper/{{ form.table_name }}" class="btn btn-success btn-icon-split">
					<span class="text">{{ t("export_as_class") }}</span>
					<span class="icon text-white-100">
						<i class="fa fa-file-export"></i>
					</span>
				</a>
			</div>
		{% endif %}
		<div class="col-md-3 col-sm-6 col-xs-12 form-group text-left font-weight-bold">
			{{ form.fields["table_name"] }}
		</div>
		<div class="col-md-9 col-sm-12 form-group text-left font-weight-bold">
			{{ form.fields["table_comment"] }}
		</div>
	</div>
    {% for column in form.columns %}
        {{ column }}
    {% endfor %}
	<div class="row mt-4 mb-5">
		<div class="col-sm-3">
			{{ form.fields["new_field"] }}
		</div>
		<div class="col-sm-3">
			{{ form.fields["save"] }}
		</div>
		<div class="col-sm-3">
			{{ form.fields["drop"] }}
		</div>
	</div>

{% endblock %}

<!DOCTYPE html>
<html>
	<head>
		{% include 'header.twig' %}
	</head>
	<body class="{{ controller.body_classes|join(' ') }}">
		<div
			class="container">
			<!-- Outer Row -->
			<div class="row justify-content-center">
				<div class="col-xl-10 col-lg-12 col-md-9">
					<div class="card o-hidden border-0 shadow-lg my-5">
						<div
							class="card-body p-0">
							<!-- Nested Row within Card Body -->
							<div class="row">
								<div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
								<div class="col-lg-6">
									<div class="p-5">
										<div class="text-center">
											<h1 class="h4 text-gray-900 mb-4">{{ controller.title }}</h1>
											 {{ controller.printMessages() }}
										</div>
										{{ controller.echoContent() }}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	</body>
</html>

{% extends "page.twig" %}

{% block title %}
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800">{{ controller.title }}</h1>
		<div class="text-gray-600 ml-3 mr-auto">
			{{ controller.table_comment }}
		</div>
        {% if controller.entityName %}
            <a class="d-sm-inline-block btn btn-sm btn-primary shadow-sm mr-1" href="{{ constant("BASE_URL") ~ "/admin/entity/insert/" ~ controller.entityName }}">
                <i class="fas fa-plus text-white-50"></i>
                {{ Translation.getTranslation("add") }}
            </a>
        {% endif %}
        <a class="d-sm-inline-block btn btn-sm btn-primary shadow-sm mr-1 table_config_import" href="#">
			<i class="fas fa-file-import text-white-50"></i>
			{{ Translation.getTranslation("config_import") }}
		</a>
        <a class="d-sm-inline-block btn btn-sm btn-primary shadow-sm mr-1 table_config_export" href="#">
			<i class="fas fa-file-export text-white-50"></i>
			{{ Translation.getTranslation("config_export") }}
		</a>
	</div>
{% endblock %}

{% block content %}
	<div class="row">
        <div class="col-md-8 order-md-first order-last">
            <div class="card p-2">
                {{ controller.printMessages() }}
                {{ controller.search_form }}
                {{ controller.echoContent() }}
            </div>
        </div>
        <div class="col-md-4">
            {{ controller.side_entity_list }}
        </div>
	</div>
{% endblock %}

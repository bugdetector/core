<div class='card shadow mb-4 p-0 {{ view.classes|join(" ") }}' {{ view.renderAttributes() }}>
	<!-- Card Header - Accordion -->
	<a href="#{{view.id}}" class="d-block card-header py-3 {{ view.opened ? : "collapsed" }}" data-toggle="collapse" role="button" aria-expanded="true">
		<h6 class="m-0 font-weight-bold text-primary">{{ view.title }}</h6>
	</a>
	<!-- Card Content - Collapse -->
	<div class="collapse {{ view.opened ? "show" : "" }}" id="{{view.id}}">
		<div class="card-body">
			{{ view.content }}
		</div>
	</div>
</div>

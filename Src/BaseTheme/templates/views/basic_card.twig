<div class="{{ view.classes|join(" ") }}">
	<div class="card {{ view.border_class }} shadow h-100 py-2">
		<a href="{{ view.href }}" class="text-decoration-none">
			<div class="card-body">
				<div class="row no-gutters align-items-center">
					<div class="col mr-2">
						<div class="text-sm font-weight-bold text-primary text-uppercase mb-1">{{ view.title }}</div>
						<div class="h5 mb-0 font-weight-bold text-gray-800">{{ view.description }}</div>
					</div>
					<div class="col-auto">
						<i class="fas fa-2x text-gray-800 {{ view.icon_class }}"></i>
					</div>
				</div>
			</div>
		</a>
	</div>
</div>

<!DOCTYPE html>
<html lang="{{ language() }}">
	{% include 'header.twig' %}
	<body>
		<div id="wrapper">
			{{ theme.sidebar }}
			<div id="content-wrapper" class="d-flex flex-column">
				{% block to_top %}
					<a class='scroll-to-top rounded' href='#'>
						<i class='fas fa-angle-up'></i>
					</a>
				{% endblock %}
				{{ theme.navbar }}
				<div class='container-fluid'>
					{% block title %}
						<div class="d-sm-flex align-items-center justify-content-between mb-4">
							<h1 class="h3 mb-0 text-gray-800">{{ controller.title }}</h1>
							{% for action in controller.actions %}
								{{ action }}
							{% endfor %}
						</div>
					{% endblock %}
					{% block content %}
					<div class="row">
						<div class="col-md-12">
							<div class="card p-2">
								{{ controller.printMessages() }}
								{{ controller.echoContent()|raw }}
							</div>
						</div>
					</div>
					{% endblock %}
				</div>
			</div>
		</div>
	</body>
</html>

<div>
{% if widget.label %}
	<label for="{{ widget.attributes["id"] }}" class="form-label fw-bolder fs-6">{{ widget.label }}</label>
{% endif %}
<select name='{{ widget.name }}' class='{{ widget.classes|join(" ") }}' {{ widget.renderAttributes()|raw }}>

	{{ widget.null_element }}
	{% for option in widget.options %}
		{{option}}
	{% endfor %}
</select>
{% if widget.description %}
	<small for="{{ widget.attributes["id"] }}" class="d-block">
		{{ widget.description }}
	</small>
{% endif %}
</div>
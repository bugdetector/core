<div>
{% if widget.label %}
	<label for="{{ widget.attributes["id"] }}" class="form-label fw-bolder fs-6">
		{{ widget.label }}
	</label>
{% endif %}
<textarea name='{{ widget.name }}' class='{{ widget.classes|join(" ") }}' {{ widget.renderAttributes()|raw }} data-key="{{ widget.fileKey ? widget.fileKey.createToken() }}">{{ widget.value }}</textarea>
{% if widget.description %}
	<small for="{{ widget.attributes["id"] }}">
		{{ widget.description }}
	</small>
{% endif %}
</div>
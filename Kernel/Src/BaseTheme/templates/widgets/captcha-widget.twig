<div class='input_widget'>
	{% if widget.label %}
		<label for="{{ widget.attributes["id"] }}" class="fw-bold text-primary">
			{{ widget.label }}
		</label>
	{% endif %}
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <img src='{{ constant('BASE_URL') }}/captcha/generateCaptchaImage' class="rounded-left captcha-image">
        </div>
        <input type='{{ widget.type }}' name='{{ widget.name }}' class='{{ widget.classes|join(" ") }}' {{ widget.renderAttributes()|raw }}/>
        <button class="btn btn-info captcha-refresh" type="button"><i class='fa fa-sync'></i></button>
    </div>
    {% if widget.description %}
		<small for="{{ widget.attributes["id"] }}" class="d-block">
			{{ widget.description }}
		</small>
	{% endif %}
</div>
